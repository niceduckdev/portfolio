---
const { href, target } = Astro.props;
const active: boolean =
    Astro.url.pathname === href || Astro.url.pathname === `${href}/`;
---

<a
    href={href}
    target={target ?? "_self"}
    class={`${active && "dark:text-accent text-accent-l"} dark:hover:text-accent hover:text-accent-l transition-colors underline cursor-pointer`}
    ><slot /></a
>
