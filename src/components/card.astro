---
import Column from "@components/column.astro";
import { convertSlug } from "@lib/slug";

const { image, title, description, date, href } = Astro.props;
---

<a href={`/projects/${convertSlug(title)}`} class="group">
    <section class="flex flex-col sm:flex-row gap-4">
        <section
            class="min-w-56 h-32 bg-cover rounded-md border-2 dark:group-hover:border-gruvbox-accent light:group-hover:border-gruvbox-accent-l transition-colors"
            style={`background-image: url('/images/${image}');`}
        >
        </section>
        <Column gap={1}>
            <h2 class="text-2xl">{title}</h2>
            <p>{description}</p>
        </Column>
    </section>
</a>
