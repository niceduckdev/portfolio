{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@modular/*": ["src/components/modular/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@lib/*": ["src/lib/*"],
            "@models/*": ["src/models/*"],
            "@services/*": ["src/services/*"],
            "@styles/*": ["src/styles/*"],
            "@plugins/*": ["src/plugins/*"]
        }
    }
}
